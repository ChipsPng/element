                    "engineLogging": false,
                    "exceptions": false,
                    "moduleLoad": false,
                    "programOutput": true,
                    "trace": false,
                    "traceResponse": false
                },
                "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceRoot}/build/lib" } ],
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb",
                "logging": {
                    "moduleLoad": false,
                    "exceptions": false,
                }
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
